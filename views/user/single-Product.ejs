<script>
function changeImage(imageSrc) {
    document.getElementById('mainProductImage').src = imageSrc;
    document.querySelectorAll('.thumb').forEach(function(img) {
        img.classList.remove('active-thumbnail');
    });
    event.target.classList.add('active-thumbnail');
}

const productImage = document.getElementById('mainProductImage');
const imageContainer = document.getElementById('imageContainer');

imageContainer.addEventListener('mousemove', function(e) {
    const rect = imageContainer.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;
    productImage.style.transformOrigin = `${x}px ${y}px`;
});

imageContainer.addEventListener('mouseleave', function() {
    productImage.style.transformOrigin = 'center';
});
</script>

<script>
async function addToWishlist(productId) {
  try {
    const response = await fetch('/addWishlist', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ productId: productId }),
    });
    if (response.ok) {
      const result = await response.json();
      Swal.fire({
        title: 'Success!',
        text: result.message,
        icon: 'success',
        timer: 1000,
        showConfirmButton: false,
      }).then(() => {
                  window.location.reload() 
              });
    } else {
      const result = await response.json();
      Swal.fire({
        title: 'Error!',
        text: result.message,
        icon: 'error',
      });
    }
  } catch (error) {
    Swal.fire({
      title: 'Error!',
      text: 'Something went wrong.',
      icon: 'error',
    });
  }
}


async function addToCart(productId, quantity) {
  try {
    const response = await fetch('/postCartPage', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ productId: productId, quantity: quantity }),
    });
    if (response.ok) {
      const result = await response.json();
      Swal.fire({
        title: 'Success!',
        text: result.message,
        icon: 'success',
        timer: 1000,
        showConfirmButton: false,
      }).then(() => {
                  window.location.reload() 
              });
    } else {
      const result = await response.json();
      Swal.fire({
        title: 'Error!',
        text: result.message,
        icon: 'error',
      });
    }
  } catch (error) {
    Swal.fire({
      title: 'Error!',
      text: 'Something went wrong.',
      icon: 'error',
    });
  }
}
</script>


