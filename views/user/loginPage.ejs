<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>FootWear</title>
    <link rel="shortcut icon" href="/images/iconshoe.jpg" type="">

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"/>
    <link rel="stylesheet" href="/public/style.css" />
    
    <style>
      .divider:after,
      .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
      }
      .h-custom {
        height: calc(100% - 73px);
      }
      @media (max-width: 450px) {
        .h-custom {
          height: 100%;
        }
      }

      
      .btn-google {
        background-color: #534af3;
        color: black;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
      }
      .btn-google img {
        height: 20px;
        margin-right: 10px;
      }
    </style>
  </head>
  <body>
    <section
      class="vh-100 bg-image"
      style="background-image: url('/images/nike-5041716_1280.jpg');">
      <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6">
              <div class="card" style="border-radius: 15px">
                <div class="card-body p-4 p-md-5">
                  <h2 class="text-uppercase text-center mb-4">Login Page</h2>
                  <p class="text-danger"><%= locals.message ? message:null %></p>
                  <p class="text-danger"><%= locals.pmessage ? pmessage : null %></p>
                  <form action="#" method="post">
                    <!-- Email Input -->
                    <div class="form-outline mb-4">
                      <label class="form-label" for="form3Example3cg">Enter Email</label>
                      <input type="email"id="email"class="form-control form-control-lg"placeholder="sample@email.com"name="email"required/>
                    </div>

                    <!-- Password Input -->
                    <div class="form-outline mb-4">
                      <label class="form-label" for="form3Example4cdg">Enter Password</label>
                      <input type="password"id="password"class="form-control form-control-lg"placeholder="Enter Password"name="password"required/>
                    </div>
                    <!-- Login Button -->
                    <div class="d-flex justify-content-center mb-4">
                      <button onclick="userLogin(event)" type="submit" class="btn btn-success btn-lg gradient-custom-4 text-body">Login </button>
                    </div>

                    <!-- Google Sign-in Button -->
                    <div class="d-flex justify-content-center mb-4">
                      <a href="/auth/google" class="btn btn-google btn-lg">
                        <img src="/images/google.png" alt="Google logo"> Signin with Google
                      </a>
                    </div>
                    <!-- Signup and Forgot Password Links -->
                    <p class="text-center text-muted mt-4 mb-0">Don't have an account?
                      <a href="/signup" class="fw-bold text-body"><u>Signup</u></a> <br>
                      <a href="/forgotPassword" class="fw-bold text-body text-decoration-none" style="color: inherit;">Forget password</a>
                    </p>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bootstrap JS and Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function userLogin(event) {
          event.preventDefault();
          const email = document.getElementById('email').value.trim();
          const password = document.getElementById('password').value.trim();
  
          if (!email || !password) {
              Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: 'Please fill in both the email and password',
                  confirmButtonText: 'Okay'
              });
              return;
          }
          fetch("/login", {
              method: 'POST',
              headers: {
                  "Content-Type": "application/json"
              },
              body: JSON.stringify({ email, password })
          })
          .then((res) => res.json())
          .then((data) => {
              if (data.success) {
                  Swal.fire({
                      icon: 'success',
                      title: 'Login Successful',
                      text: 'You will be redirected shortly!',
                      timer: 1000,
                      showConfirmButton: false
                  }).then(() => {
                      window.location.href = data.redirect; 
                  });
              } else if (data.error) {
                  Swal.fire({
                      icon: 'error',
                      title: 'Login Failed',
                      text: data.error,
                      confirmButtonText: 'Retry'
                  });
              }
          })
          .catch((error) => {
              Swal.fire({
                  icon: 'error',
                  title: 'Oops!',
                  text: 'Something went wrong. Please try again!',
                  confirmButtonText: 'Okay'
              });
          });
      }
  </script>
  
  
  </body>
</html>
