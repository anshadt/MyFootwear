            <!-- Main Content -->
            <div class="col-md-10 content">
                <div class="d-flex justify-content-between mb-4"></div>
                <div class="container mt-4">
    <h2>Order Management</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>User</th>
                <th>Total Amount</th>
                <th>Payment Method</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.orderId %></td>
                    <td><%= order.createdAt.toLocaleDateString() %></td>
                    <td><%= order.user.name %></td>
                    <td>$<%= order.totalAmount.toFixed(2) %></td>
                    <td><%= order.paymentMethod %></td>
                    
                    <td>
                        <!-- <select class="form-control status-select" data-order-id="<%= order._id %>" <%= order.orderStatus === 'Cancelled' ? 'disabled' : '' %>> -->
                            <select class="form-control status-select" data-order-id="<%= order._id %>" <%= (order.orderStatus === 'Cancelled' || order.orderStatus === 'Returned') ? 'disabled' : '' %>>
                            <option value="Pending" <%= order.orderStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                            <option value="Processing" <%= order.orderStatus === 'Processing' ? 'selected' : '' %>>Processing</option>
                            <option value="Shipped" <%= order.orderStatus === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                            <option value="Delivered" <%= order.orderStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                            <option value="Cancelled" <%= order.orderStatus === 'Cancelled' ? 'selected' : '' %> <%= order.orderStatus === 'Cancelled' ? 'disabled' : '' %>>Cancelled</option>
                            <option value="Returned" <%= order.orderStatus === 'Returned' ? 'selected' : '' %> disabled>Returned</option>
    
                        </select>
                    </td>
                    <td>
                        <a href="/admin/orders/<%= order._id %>" class="btn btn-info btn-sm">View Details</a>
                    </td>
                </tr>
            <% }); %>
           </tbody>
        </table>
         </div>
    </div>
    </div>
    </div>
    <div class="d-flex justify-content-center pagination-container">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
                    </li>
                <% } %>
    
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                    </li>
                <% } %>
    
                <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
                    </li>
                <% } %>
            </ul>
        </nav>
