<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Order Details</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Order ID: <%= order.orderId %></h5>
                <p class="card-text">User: <%= order.user.name %> (<%= order.user.email %>)</p>
                <p class="card-text">Status: <%= order.orderStatus %></p>
                <p class="card-text">Total Amount: $<%= order.totalAmount.toFixed(2) %></p>
                <p class="card-text">Date: <%= order.createdAt.toLocaleString() %></p>

                <h6 class="mt-4">Items:</h6>
                <ul class="list-group">
                    <% order.items.forEach(item => { %>
                        <li class="list-group-item">
                            <%= item.product.productname %> - Quantity: <%= item.quantity %> - Price: $<%= item.price.toFixed(2) %>
                        </li>
                        <li>
                            <img src="<%= item.product.images[0] %>" alt="<%= item.product.productname %>" class="order-image" width="100px">
                            
                        </li>
                    <% }); %>
                </ul>

                <h6 class="mt-4">Shipping Address:</h6>
                <p>
                    <%= order.address.country %>, <%= order.address.city %>, <%= order.address.state %> <%= order.address.zipCode %>
                </p>
            </div>
        </div>
        <a href="/admin/loardOrderMng" class="btn btn-primary mt-3">Back to Orders</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>