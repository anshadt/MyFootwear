    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QLibFx9s37UsRLBfe5dqRvkhcI1B5NeXf5hYk4CkOACf0z+dth1Y4cfLb7AG/hsF" crossorigin="anonymous">

    <style>
        
        .sidebar {
            position: fixed;
            top: 56px;
            bottom: 0;
            left: 0;
            width: 250px;
            background-color: #ffbe33;
            color: #fff;
            padding-top: 1rem;
            overflow-y: auto;
            z-index: 100; 
        }


        .sidebar a {
            color: #fff;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #071553;
        }

        
        @media (max-width: 767px) {
            .sidebar {
                display: none;
            }
        }

         
        .content {
            margin-left: 250px; 
            padding: 2rem;
            transition: margin-left 0.3s;
        }

        
        @media (max-width: 767px) {
            .content {
                margin-left: 0;
                padding: 1rem;
            }
        }
        .navbar-toggler {
            border: none;
        }

        @media (min-width: 768px) {
            .navbar-collapse {
                display: none;
            }
        }

        .table-container {
            margin-top: 2rem;
        }

        .table-header {
            background-color: #007bff;
            color: #fff;
        }

        .table-header th {
            font-weight: bold;
        }

        .table img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 4px;
        }

        .table-actions {
            display: flex;
            justify-content: space-between;
            gap: 0.5rem;
        }

        .btn-edit {
            background-color: #28a745;
            color: #fff;
            border: none;
        }

        .btn-edit:hover {
            background-color: #218838;
        }

        .btn-delete {
            background-color: #dc3545;
            color: #fff;
            border: none;
        }

        .btn-delete:hover {
            background-color: #c82333;
        }

        .btn-add {
            background-color: rgb(6, 92, 13);
            color: #fff;
            border: none;
        }

        .btn-add:hover {
            background-color: #0056b3;
        }
        .sidebar .nav-link.active {
                        background-color: #071553;
                        font-weight: bold;
                    }
    </style>
</head>

<body>
